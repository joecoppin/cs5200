<?xml version="1.0"?>
<configuration>
    <configSections>
      <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
      <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
            <section name="WordGuessPlayer.PlayerSettings" type="System.Configuration.ClientSettingsSection, System, Version=2.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false"/>
        </sectionGroup>
    </configSections>

    <log4net>
      <appender name="RollingFile" type="log4net.Appender.RollingFileAppender">
        <file value="WordGuessPlayer.log"/>
        <appendToFile value="false"/>
        <maximumFileSize value="10000KB"/>
        <maxSizeRollBackups value="10"/>
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%date [%thread] %-5level %logger - %message%newline"/>
        </layout>
      </appender>

      <appender name="Console" type="log4net.Appender.ConsoleAppender">
        <layout type="log4net.Layout.PatternLayout">
          <conversionPattern value="%date [%thread] %-5level %logger - %message%newline"/>
        </layout>
      </appender>

      <root>
        <level value="DEBUG"/>
        <appender-ref ref="RollingFile"/>
        <appender-ref ref="Consoler"/>
      </root>

      <logger name="Common.Communicator">
        <level value="ERROR"/>
      </logger>

      <logger name="Common.Listener">
        <level value="INFO"/>
      </logger>

    </log4net>

    <userSettings>
          <WordGuessPlayer.PlayerSettings>
                <setting name="Timeout" serializeAs="String">
                      <value>500</value>
                </setting>
                <setting name="ServerHost" serializeAs="String">
                      <value>127.0.0.1</value>
                </setting>
                <setting name="ServerPort" serializeAs="String">
                      <value>12001</value>
                </setting>
                <setting name="ANumber" serializeAs="String">
                      <value>A000001</value>
                </setting>
                <setting name="FirstName" serializeAs="String">
                      <value>Stephen</value>
                </setting>
                <setting name="LastName" serializeAs="String">
                      <value>Clyde</value>
                </setting>
                <setting name="AmDeadTime" serializeAs="String">
                      <value>15000</value>
                </setting>
                <setting name="Alias" serializeAs="String">
                      <value>swc</value>
                </setting>
          </WordGuessPlayer.PlayerSettings>
      </userSettings>
<startup><supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.6.1"/></startup></configuration>
